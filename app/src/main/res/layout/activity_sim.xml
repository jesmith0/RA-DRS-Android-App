<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".SimActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finish_act"
        android:id="@+id/finish_button"
        android:layout_below="@+id/rec_stop_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rec_stop_button"
        android:src="@drawable/ic_action_mic"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/finish_button"
        android:layout_toStartOf="@+id/finish_button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_pause_button"
        android:src="@drawable/ic_action_play"
        android:layout_alignTop="@+id/rec_stop_button"
        android:layout_toRightOf="@+id/finish_button"
        android:layout_toEndOf="@+id/finish_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/db_readout"
        android:maxLines="1"
        android:maxLength="9"
        android:id="@+id/db_readout"
        android:layout_below="@+id/rec_stop_button"
        android:layout_alignLeft="@+id/db_max"
        android:layout_alignStart="@+id/db_max"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/db_max"
        android:maxLines="1"
        android:maxLength="10"
        android:id="@+id/db_max"
        android:layout_below="@+id/db_readout"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/curtain_button"
        android:src="@drawable/open_curtain"
        android:background="@null"
        android:layout_above="@+id/rec_stop_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp" />
</RelativeLayout>